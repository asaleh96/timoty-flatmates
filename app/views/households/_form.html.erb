<div style="margin: 20px auto; width: 90%; font-size: 2vh;">
<%= simple_form_for(@household) do |f| %>
  <%= f.input :name, placeholder: "Enter a name...", input_html: { style: 'width: 80vh; height: 4vh; font-size: 2.5vh' } %>

  <div class="form-actions text-center">
  <button class='btn btn-main' style='padding: 0px'>
  <%= f.submit class: "btn-main", style: 'background-color: #f3703f; padding: 1vh 2vh; font-size: 2vh;',  data: {turbo: false} %>
  </button>
  </div>
<% end %>
</div>
