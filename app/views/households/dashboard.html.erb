
<div class='tabs-div' style='min-height: 100vh'>

    <h2 class="text-center", style='color: #2a2e30; padding: 30px 20px 0 20px; font-size: 32px; font-weight: bold;'><b><%= current_user.username.capitalize%>'s<span style='color:#01a5e2;'> Dashboard</span></b></h2>
    <p class="text-center" style='font-size: 20px;  opacity: .7; padding: 10px 20px';>  Time to get to work!</p>
<div data-controller="tabs" data-tabs-default-tab-value="two" class='list-inline tabs-underlined'>



  <button id="one" data-tabs-target="btn" data-action="click->tabs#select" class='tab-underlined' style='font-size: 20px;'>Rules <i class="fa-solid fa-house-user"></i></button>
  <button id="two" data-tabs-target="btn" data-action="click->tabs#select" class='tab-underlined active' style='font-size: 20px;'>Tasks <i class="fa-solid fa-list-check"></i></button>
  <button id="three" data-tabs-target="btn" data-action="click->tabs#select" class='tab-underlined' style='font-size: 20px;'>Activities <i class="fa-solid fa-gamepad"></i></button>
  <button id="abc" data-tabs-target="btn" data-action="click->tabs#select" class='tab-underlined' style='font-size: 20px;' >Leaderboard <i class="fa-solid fa-trophy"></i></button>

  <div data-tabs-target="tab" id="one">

  <ul>


<div class="container", style='width: 100%; padding: 10px 30px; margin: 20px auto;'>

            <div class="row">




                <div class="col-lg-10 mx-auto">
                    <div class="career-search mb-60">

                        <div class="filter-result">
                            <% @household.rules.each do |rule| %>

                              <div class="job-box d-md-flex align-items-center justify-content-between mb-30">
                                  <div class="job-left my-4 d-md-flex align-items-center flex-wrap">
                                      <div class="img-holder mr-md-4 mb-md-0 mb-4 mx-auto mx-md-0 d-md-none d-lg-flex">
                                          <%= image_tag ("accont.svg") %>
                                      </div>
                                      <div class="job-content">
                                          <ul class="d-md-flex flex-wrap text-capitalize ff-open-sans">
                                              <li class="mr-md-4">
                                                  <i class="zmdi zmdi-pin mr-2" style='padding-right: 5px'></i><%= rule.name %>
                                              </li>

                                          </ul>
                                      </div>
                                  </div>

                                <div class="job-right my-4 flex-shrink-0">
                                    <%= link_to edit_household_rule_path(rule.household, rule), class: 'secondary-btn', style: 'margin: 10px 5px' do %>
                                      <i class="fa-solid fa-pen-to-square"></i>
                                    <% end %>
                                    <%= link_to household_rule_path(rule.household, rule), class: 'btn-main', style: 'background-color: red;',
                                      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                                      <i class="fa-solid fa-trash"></i>
                                    <% end %></p>
                                </div>
                              </div>
                            <% end %>
                          </div>

                    </div>


                </div>

            </div>

        </div>

</ul>
   </div>
  <div data-tabs-target="tab" id="two">
  <ul>

<div class="container", style='width: 100%; padding: 10px 30px; margin: 20px auto;'>

            <div class="row">




                <div class="col-lg-10 mx-auto">
   <% @tasks.each do |task| %>
      <%= render 'tasks/task', task: task %>
    <% end %>

</div>
</div>
</div>

</ul>
   </div>
  <div data-tabs-target="tab" id="three">
  <ul>

<div class="container", style='width: 100%; padding: 10px 30px; margin: 20px auto;'>
  <div class="row">
    <div class="col-lg-10 mx-auto">
        <% @household.activities.each do |activity| %>
            <%= render 'activities/activity', activity: activity %>
        <% end %>
  </div>
</div>

</ul>
  </div>
  <div data-tabs-target="tab" id="abc">
  <ul>
  <div class="container", style='width: 100%; padding: 10px 30px; margin: 20px auto;'>
<div class="row">

                <div class="col-lg-10 mx-auto">

  <div class="leaderboard__profiles">

    <% @household.users.order("earned_points desc").each_with_index do |user, index| %>
      <%= link_to user_path(user) do %>
      <article class="leaderboard__profile">
          <% if user.photo.attached? %>
            <%= cl_image_tag user.photo.key, class: 'rounded-circle text-center object-center leaderboard__picture', style: 'display: inline', height: 200, width: 200, crop: :fill, gravity: "auto", radius: "max" %>
          <% else %>
            <%= image_tag 'user-placeholder.png', class: 'rounded-circle text-center leaderboard__picture', height: 100, width: 100  %>
          <% end %>
          <% if index == 0 %>
        <span class="leaderboard__name"><i class="fa-solid fa-trophy" style='color: gold; font-size: 180%;'></i>  <%= index + 1 %>. <%= user.username %></span>
          <% elsif index == 1 %>
        <span class="leaderboard__name"><i class="fa-solid fa-trophy" style='color: silver; font-size: 150%;'></i>  <%= index + 1 %>. <%= user.username %></span>
          <% elsif index == 2 %>
        <span class="leaderboard__name"><i class="fa-solid fa-trophy" style='color: #cd8f32; font-size: 120%'></i>  <%= index + 1 %>. <%= user.username %></span>
          <% else %>
        <span class="leaderboard__name"><%= index + 1 %>. <%= user.username %></span>

          <% end %>
        <span class="leaderboard__value"> <%= user.earned_points %></span>
      </article>
    <% end %>
     <% end %>

  </div>

</ul>
  </div>
</div>
</div>
</div>

</div>
</div>
