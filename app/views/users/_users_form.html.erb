
<div style="width: 50%; margin: 0 auto; padding: 20px 30px; border-radius: 10px;">
<%= simple_form_for(@user) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :username %>
  <%= f.input :birthday_date, as: :date, start_year: Date.today.year - 120,
                              end_year: Date.today.year,
                              order: [:day, :month, :year] %>
  <%= f.input :status %>
  <%= f.input :photo, as: :file %>

  <div style="text-align: center;">
  <%= f.submit class: "btn-flat" %>
  </div>
<% end %>
</div>
