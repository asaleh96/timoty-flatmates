<div style="width: 90%; margin: 20px auto;">
<%= simple_form_for(@user) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :username %>
  <%= f.input :birthday_date %>
  <%= f.input :status %>

  <div style="text-align: center;">
  <%= f.submit class: "btn-flat" %>
  </div>
<% end %>
</div>
